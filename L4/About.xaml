<Window x:Class="L4.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L4"
        mc:Ignorable="d"
        Title="About" WindowStyle="None" Height="150" Width="450" ResizeMode="NoResize">
    <Grid>
        <TextBlock Text="Laboratory work was performed by a student of group 404 Maxim Galanov.
                         The user has the ability to add, modify and delete entries in the schedule." 
                   TextWrapping="Wrap" Width="400" Height="50" Margin="0, 30, 0, 0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBoxAbout" Content="don't show again" Margin="0, 0, 0, 50"  VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <Button Content="ok" Click="Button_Click" Width="50" Height="20" Margin="0, 0, 0, 20" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
